{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "dom"
    ],
    "baseUrl": "./src/",
    "paths": {
      "@graphql/*": [ "./generated/graphql/*" ],
      "@interfaces/*": [ "./common/intefaces/*" ],
      "@classes/*": [ "./common/intefaces/*" ],
      "@validations/*": [ "./common/intefaces/*" ],
      "@components/*": [ "./components/*" ],
      "@hooks/*": [ "./hooks/*" ],
    },
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "craco.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
